<section id="app">
  <div class="movie-wrapper">
    <aside class="topInfo">
      <h3 class="movieTitleDemo">Try This Top Rating Movie!</h3>
      <h4 class="movie-title">Name : {{ defaultMovie.movies_title }}</h4>
      <span class="movie-year">
        Year : {{ defaultMovie.movies_year }} &nbsp;&bull;&nbsp; Runtime : {{ defaultMovie.movies_runtime }}
      </span>
      <i class="movie-genre"> Genre : {{ defaultMovie.genre_name }}</i>
    </aside>

    <video autoplay muted controls>
      <source src="video/{{ defaultMovie.movies_trailer }}" type="video/mp4">
    </video>
  </div>

  <!-- load in all of the thumnails for each genre -->
  <section class="genre-lists" v-for="genre in genres">
    <div v-if="genre.movies.length > 0">
      <div class="genre-item">
        <h6 class="genre-name">${ genre.name }</h6>
        <div class="movie-list" v-for="movie in genre.movies">
          <a :href="'/movies/' + movie.movies_id + '/' + movie.movies_trailer">
            <img class="movie-thumb" :src="'images/' + movie.movies_cover" :alt="movie.movies_title">
          </a>
        </div>
      </div>
    </div>
  </section>
</section>
